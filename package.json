{
  "name": "@oceanprotocol/keeper-contracts",
  "version": "0.6.10",
  "description": "Integration of TCRs, CPM and Ocean Tokens in Solidity",
  "bugs": {
    "url": "https://github.com/oceanprotocol/keeper-contracts/issues"
  },
  "homepage": "https://github.com/oceanprotocol/keeper-contracts#readme",
  "main": "truffle.js",
  "scripts": {
    "compile": "truffle compile",
    "migrate": "npx truffle exec ./scripts/deployContracts.js",
    "migrate:spree": "export NETWORK=spree&&npm run migrate -- --network spree",
    "migrate:nile": "export NETWORK=nile&&npm run migrate -- --network nile",
    "migrate:kovan": "export NETWORK=kovan&&npm run migrate -- --network kovan",
    "migrate:rinkeby": "export NETWORK=rinkeby&&npm run migrate -- --network rinkeby",
    "migrate:mainnet": "export NETWORK=mainnet&&npm run migrate -- --network mainnet",
    "test:unit": "npm run test -- $(find ./test/unit/ -name '*.js')",
    "test:integration": "npm run test -- $(find ./test/int/ -name '*.js')",
    "test:upgradability": "npm run test -- $(find ./test/upgradability/ -name '*.js')",
    "test": "if [ -z ${NETWORK} ]; then export NETWORK='development'; fi && if [ ! -f ./wallet.json ]; then truffle exec ./scripts/setupWalletWrapper.js --network $NETWORK; fi && truffle test",
    "test:cover": "export NETWORK='coverage' && solidity-coverage",
    "report-coverage": "cat ./coverage/lcov.info | codacy-coverage --token b95545c0da4b45848cc5eef363c2711e  --prefix ./",
    "release": "./bumpversion.sh patch",
    "clean": "rm -rf ./build/ ./artifacts/*.development.json ./coverage/ ./coverageEnv/ ./coverage.json zos.* .zos.session wallent.json",
    "lint": "npm run lint:eslint && npm run lint:ethlint",
    "lint:eslint": "eslint --ignore-pattern '/coverage/' .",
    "lint:ethlint": "solium -d ./contracts/",
    "lint:ethlint:watch": "npm run lint:solium -- --watch",
    "lint:fix": "npm run lint:eslint -- --fix && npm run lint:solium -- --fix",
    "security:mythril": "truffle compile && myth -x --truffle --max-depth 8 --outform markdown 2>&1 | tee mythrilReport.md || true",
    "security:securify": "docker run -v $(pwd):/project chainsecurity/securify 2>&1 | tee securifyReport.txt || true",
    "security:surya": "surya graph contracts/**/*.sol | dot -Tpng > KeeperContracts.png"
  },
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "files": [
    "artifacts/**/*",
    "doc/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oceanprotocol/keeper-contracts.git"
  },
  "author": "Ocean Protocol",
  "license": "Apache-2.0",
  "devDependencies": {
    "dot": "^1.1.2",
    "eslint": "^5.12.0",
    "eslint-config-oceanprotocol": "^1.3.0",
    "eth-gas-reporter": "^0.1.12",
    "ethereumjs-abi": "^0.6.5",
    "ethlint": "^1.2.1",
    "glob": "^7.1.3",
    "openzeppelin-eth": "^2.1.2",
    "solidity-coverage": "^0.5.11",
    "solium": "^1.2.1",
    "solium-plugin-security": "^0.1.1",
    "truffle": "^5.0.2",
    "truffle-hdwallet-provider": "^1.0.2",
    "web3": "1.0.0-beta.37",
    "web3-provider-engine": "^14.1.0",
    "zos": "^2.1.0",
    "zos-lib": "^2.1.0"
  }
}
